---
import { CutCornerButton } from '../components/CutCornerButton'
import Input from '../components/input.astro'
import InteriorContent from '../components/InteriorContent.astro'
import InteriorHero from '../components/InteriorHero.astro'
import DefaultLayout from '../layouts/Default.astro'
import Textarea from '../components/textarea.astro'
---

<DefaultLayout>
	<InteriorHero>
		<p class="text-center font-extrabold uppercase tracking-wider text-zinc-500">letÂ´s talk</p>
		<h1
			class="mx-auto mt-4 max-w-3xl text-center font-heading text-5xl font-black md:text-6xl lg:text-7xl"
		>
			Kontakt
		</h1>
		<p class="mx-auto mt-6 max-w-xl text-center text-xl text-zinc-400 md:text-2xl">
			Lorem ipsum dolor sit amet consectetur adipisicing elit. Ea recusandae natus aliquid autem
			maiores praesentium!
		</p>
	</InteriorHero>
	<InteriorContent>
		<div class="mx-auto max-w-xl pb-[1000px]">
			<h2 class="font-heading text-3xl font-black">Womit kann ich Ihnen helfen?</h2>
			<form class="mt-8 flex flex-col" name="contact" method="post" data-netlify="true">
				<label for="name">Name</label>
				<Input type="text" name="name" id="name" />
				<label for="email" class="mt-4">E-Mail </label>
				<Input type="email" name="email" id="email" />
				<label for="message" class="mt-4">Nachricht</label>
				<Textarea name="message" id="message" />
				<CutCornerButton className="mt-4">Nachricht senden</CutCornerButton>
			</form>
		</div>
	</InteriorContent>
</DefaultLayout>
